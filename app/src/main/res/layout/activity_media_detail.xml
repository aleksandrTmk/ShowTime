<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/media_detail_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/media_detail_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="@string/transition_item_to_detail"
            android:src="@drawable/poster"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/media_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_detail_spacing"
            android:textStyle="bold"
            android:textSize="@dimen/activity_detail_text_size_title"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/media_detail_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_detail_text_size_other"
            android:textStyle="bold"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_detail_spacing"/>

        <TextView
            android:id="@+id/media_detail_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_detail_text_size_other"
            android:gravity="fill"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_detail_spacing"/>
    </LinearLayout>
</ScrollView>